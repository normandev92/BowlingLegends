@model IEnumerable<BowlingLegends.Models.Bowler>

@{
    ViewBag.Title = "Bowlers";
    var authenticated = User.Identity.IsAuthenticated;
}

<h2>Bowlers</h2>

@if (authenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BowlingArm)
        </th>
        @if (authenticated)
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.BowlerID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BowlingArm)
            </td>
            <td>
                @if (authenticated)
                {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BowlerID })
                </td>
                }
            </tr>
    }

</table>
